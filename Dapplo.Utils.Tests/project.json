{
	"version": "1.0.0-*",
	"title": "Dapplo.Utils.Tests",
	"authors": [ "Robin Krom" ],
	"copyright": "Copyright Â© Dapplo 2016",
	"description": "A library with utilities which are used by various Dapplo libraries.",
	"supports": {},
    "dependencies": {
        "Costura.Fody": "1.3.3",
        "Dapplo.Log": "1.0.23",
        "Dapplo.Log.XUnit": "1.0.23",
        "Dapplo.Utils": "1.0.0-*",
        "Dapplo.Utils.Notify": "1.0.0-*",
        "Dapplo.Utils.Tests.TestAssembly": "1.0.0-*",
        "xunit.runner.visualstudio": "2.1.0",
        "Xunit.StaFact": "0.1.36-beta"
    },
	"frameworks": {
		"net45": {
			"frameworkAssemblies": {
				"PresentationCore": "4.0.0.0",
				"PresentationFramework": "4.0.0.0",
				"System.Drawing": "4.0.0.0",
				"System.Runtime.Caching": "4.0.0.0",
				"System.Xaml": "4.0.0.0",
				"WindowsBase": "4.0.0.0"
			}
		}
	},
	"configurations": {
		"Release": {
			"buildOptions": {
				"optimize": true,
				"embed": {
					"include": [
						"TestFiles/embedded*.*"
					],
					"mappings": {
						"Dapplo.Utils.Tests.TestAssembly.dll": "../Dapplo.Utils.Tests.TestAssembly/bin/Release/netstandard1.3/Dapplo.Utils.Tests.TestAssembly.dll"
					}
				}
			}
		},
		"Debug": {
			"buildOptions": {
				"optimize": false,
				"embed": {
					"include": [
						"TestFiles/embedded*.*"
					],
					"mappings": {
						"Dapplo.Utils.Tests.TestAssembly.dll": "../Dapplo.Utils.Tests.TestAssembly/bin/Debug/netstandard1.3/Dapplo.Utils.Tests.TestAssembly.dll"
					}
				}
			}
		}
	},
	"tools": {
		"coveralls.io": "1.3.4",
		"OpenCover": "4.6.519",
		"ReportGenerator": "2.5.1",
		"xunit.runner.console": "2.1.0"
	},
	"buildOptions": {
		"xmlDoc": false,
		"copyToOutput": [ "TestFiles\\dapplo.png" ]
	},
	"packOptions": {
		"owners": [ "Dapplo" ],
		"summary": "Utils",
		"licenseUrl": "http://www.gnu.org/licenses/lgpl-3.0.en.html",
		"projectUrl": "http://www.dapplo.net/blocks/Dapplo.Utils",
		"iconUrl": "http://www.dapplo.net/favicon.ico"
	},
	"scripts": {
		"postbuild": [ "" ]
	}
}